#!/usr/bin/env bash
# Este script detiene el proceso 4-to_infinity_and_beyond

# Encontrar el PID del proceso que ejecuta 4-to_infinity_and_beyond
pid=$(pgrep -f "bash ./4-to_infinity_and_beyond")

# Enviar una se침al SIGTERM al proceso utilizando la redirecci칩n de se침al
# Simulando una se침al SIGINT (Ctrl+C)
echo -n "Stopping process with PID $pid" > /proc/$pid/fd/0
