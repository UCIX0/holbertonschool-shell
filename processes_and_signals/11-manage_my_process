#!/usr/bin/env bash
# Script to manage the manage_my_process daemon

PIDFILE=/var/run/my_process.pid
PROG=/path/to/manage_my_process  # Cambia esta ruta a la ubicaciÃ³n correcta de manage_my_process

start() {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        if [ -n "$PID" ] && kill -0 "$PID" 2>/dev/null; then
            echo "manage_my_process already running"
            exit 1
        else
            rm -f "$PIDFILE"
        fi
    fi
    $PROG &
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        if [ -n "$PID" ] && kill -0 "$PID" 2>/dev/null; then
            kill "$PID"
            rm -f "$PIDFILE"
            echo "manage_my_process stopped"
        else
            echo "manage_my_process not running"
            rm -f "$PIDFILE"
        fi
    else
        echo "manage_my_process not running"
    fi
}

restart() {
    stop
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
