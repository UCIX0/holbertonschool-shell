#!/usr/bin/env bash
# Script to manage the manage_my_process daemon

PIDFILE=/var/run/my_process.pid
PROG=/path/to/manage_my_process  # Cambia esta ruta a la ubicaciÃ³n correcta de manage_my_process

case "$1" in
    start)
        if [ -f "$PIDFILE" ]; then
            echo "manage_my_process already running"
        else
            $PROG &
            echo $! > "$PIDFILE"
            echo "manage_my_process started"
        fi
        ;;
    stop)
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            if [ -n "$PID" ]; then
                kill "$PID"
                rm -f "$PIDFILE"
                echo "manage_my_process stopped"
            fi
        else
            echo "manage_my_process not running"
        fi
        ;;
    restart)
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            if [ -n "$PID" ]; then
                kill "$PID"
                rm -f "$PIDFILE"
            fi
        fi
        $PROG &
        echo $! > "$PIDFILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
